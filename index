select USERS.NAMESURNAME, CITIES.CITY,a.ADDRESSTEXT, COUNTRIES.COUNTRY
from ADDRESS a
join USERS on users.ID = a.USERID
join COUNTRIES on COUNTRIES.ID = a.COUNTRYID 
join CITIES on CITIES.ID = a.CITYID
where USERS.NAMESURNAME  like '%hanife%'
order by NAMESURNAME asc



select USERS.NAMESURNAME, CITIES.CITY,a.ADDRESSTEXT, COUNTRIES.COUNTRY
from ADDRESS a
join USERS on users.ID = a.USERID
join COUNTRIES on COUNTRIES.ID = a.COUNTRYID 
join CITIES on CITIES.ID = a.CITYID
order by NAMESURNAME asc

BEGIN
DECLARE @NAMESURNAME AS NVARCHAR(100)
DECLARE @CITY AS NVARCHAR(100)
DECLARE @COUNTRY AS NVARCHAR(100)
DECLARE @ADDRESSTEXT AS NVARCHAR(100)

DECLARE @RAND AS INT
SET @RAND = RAND()*100000

select @NAMESURNAME =USERS.NAMESURNAME,
@CITY = CITIES.CITY,
@ADDRESSTEXT = a.ADDRESSTEXT, 
@COUNTRY = COUNTRIES.COUNTRY
from ADDRESS a
join USERS on users.ID = a.USERID
join COUNTRIES on COUNTRIES.ID = a.COUNTRYID 
join CITIES on CITIES.ID = a.CITYID
WHERE a.ID = @RAND

set @RAND = RAND()*16000
select @NAMESURNAME =USERS.NAMESURNAME
from ADDRESS a
join USERS on users.ID = a.USERID
WHERE a.ID = @RAND

SET @RAND = @RAND +1
SELECT @RAND
END

SELECT * FROM ADDRESS


