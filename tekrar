 SELECT * FROM musteriler AS M
 INNER join cities c on c.id = m.CITYID
 INNER JOIN districties d on d.id = m.DISTRICTID
 where (c.cityName = 'Kayseri' and d.districtName = 'Talas') or m.GENDER = 'K'

