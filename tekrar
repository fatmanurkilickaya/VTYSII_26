create database customers
use customers
create table musteriler(
ID int primary key not null identity(2,2),
NAMESURNAME	nvarchar(74),
TCNUMBER int,
GENDER	nchar(2),
EMAIL	nvarchar(74),
BIRTHDATE	nvarchar(74),
CITYID int  foreign key (CITYID) references cities(id),
DISTRICTID int  foreign key (DISTRICTID) references districties(id),
TELNR1	nvarchar(74),
TELNR2 nvarchar(74)

);

create table cities(
id int primary key identity(1,1) NOT NULL,
cityName nvarchar(100)
)
 
create table districties(
id int primary key identity(1,1) NOT NULL,
cityid int foreign key (id) references cities (id),
districtName nvarchar(100)
);


select * from cities
insert into cities values ('Kayseri')
